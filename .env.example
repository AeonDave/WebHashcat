### WebHashcat (Django + Celery)
DEBUG=1
SECRET_KEY=[generate]
DJANGO_ALLOWED_HOSTS=*
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=
DJANGO_SUPERUSER_PASSWORD=Passw0rd!

WEBHASHCAT_HASHCAT_BINARY=/usr/bin/hashcat
WEBHASHCAT_POTFILE=/webhashcat/Files/potfile

# MySQL configuration (used by both the mysql:8.0 container and Django)
MYSQL_HOST=db
MYSQL_PORT=3306
MYSQL_DATABASE=webhashcat
MYSQL_USER=webhashcat
MYSQL_PASSWORD=webhashcat_password
MYSQL_ROOT_PASSWORD=root_password
MYSQL_CONNECT_TIMEOUT=10

HASHCAT_CACHE_REDIS_URL=redis://redis:6379/1
HASHCAT_CACHE_REFRESH_SECONDS=30
HASHCAT_CACHE_STALE_SECONDS=90
HASHCAT_CACHE_TTL_SECONDS=300

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Hostname sent to nodes via X-Hashcat-Brain-Host and used by default by the node brain client
HASHCAT_BRAIN_HOST=webhashcat-brain
# Shared brain password for both the brain server and nodes
HASHCAT_BRAIN_PASSWORD=abcdefghilmno

### HashcatNode (agent)
HASHCATNODE_BIND=0.0.0.0
HASHCATNODE_PORT=9999
# Basic auth credentials for the node API
HASHCATNODE_USERNAME=node
HASHCATNODE_PASSWORD=node
# Hashcat binary and workload profile
HASHCATNODE_BINARY=/usr/local/bin/hashcat
HASHCATNODE_WORKLOAD_PROFILE=3
# Directories for assets inside the container/host
HASHCATNODE_HASHES_DIR=/hashcatnode/hashes
HASHCATNODE_RULES_DIR=/hashcatnode/rules
HASHCATNODE_WORDLISTS_DIR=/hashcatnode/wordlists
HASHCATNODE_MASKS_DIR=/hashcatnode/masks
HASHCATNODE_OUTPUTS_DIR=/hashcatnode/outputs
HASHCATNODE_POTFILES_DIR=/hashcatnode/potfiles
HASHCATNODE_CERT_DIR=/hashcatnode/certs
HASHCATNODE_DB_PATH=/hashcatnode/data/hashcatnode.db

# Brain client config (set HOST if you don't want auto-detection)
HASHCATNODE_BRAIN_ENABLED=true
HASHCATNODE_BRAIN_HOST=
HASHCATNODE_BRAIN_PORT=13743

# TLS generation defaults
HASHCATNODE_TLS_DAYS=365
HASHCATNODE_TLS_SUBJECT=/C=IT/ST=Italy/L=Rome/O=WebHashcat/OU=HashcatNode/CN=hashcatnode

# Windows nodes need this for peewee on sqlite; leave empty otherwise
HASHCATNODE_ALLOW_PASSWORD_AND_HASH=
